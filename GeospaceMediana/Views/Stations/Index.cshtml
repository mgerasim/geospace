@{
    ViewBag.Title = "Станции";
}

<h2>Станции</h2>

@if( ViewBag.IsLocal )
{ 
<p>
    @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })
</p>
}


<table class="table table-bordered table-hover">
    <tr>
        <th>Индекс</th>
        <th>Наименование</th>
        <th>Долгота</th>
        <th>Широта</th>
        @if( ViewBag.IsLocal )
        {
            <th></th>
        }
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Encode(item.Code)
            </td>
            <td>
                @Html.Encode(item.Name)
            </td>
            <td>
                @Html.Encode(item.Longitude)
            </td>
            <td>
                @Html.Encode(item.Latitude)
            </td>
            @if( ViewBag.IsLocal )
            {
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.ID})
                </td>   
            }         
        </tr>
        
    }
</table>

@Html.ActionLink("География станций", "Stations", "Map")