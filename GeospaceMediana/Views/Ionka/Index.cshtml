@{
    ViewBag.Title = @ViewBag.Title;
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th rowspan="2">
                Час
            </th>
            @foreach (var item in Model.GetHeader())
            {
                <th colspan="7">
                    @item
                </th>
            }
        </tr>

        <tr>
            
                @foreach(var item in Model.GetHeader())
                {
                    foreach(var subitem in Model.GetHeaderValue())
                    {
                        <th>
                            @subitem
                        </th>
                    }
                }
            
        </tr>
    </thead>

    <tbody>

        @foreach(var item in Model.GetHour())
        {
            <tr>
                <td>
                    @item
                </td>
            </tr>
        
        }
        <tr>
            <td rowspan="3"></td>
            @foreach (var item in Model.GetHeader())
            {
                <td colspan="7">
                    Ak
                </td>
            }
        </tr>

        <tr>
            @foreach (var item in Model.GetHeader())
            {
                <td colspan="7">
                    K-индексы
                </td>
            }
        </tr>

        <tr>
            @foreach (var item in Model.GetHeader())
            {
                <td colspan="7">
                    <table class="table-bordered" width="100%">
                        
                            <tr>
                                <td width="12%">1</td>
                                <td width="12%">2</td>
                                <td width="12%">3</td>
                                <td width="12%">4</td>
                                <td width="12%"></td>
                                <td width="12%"></td>
                                <td width="12%"></td>
                                <td width="12%"></td>

                            </tr>
                       
                    </table>                   
                </td>
            }
        </tr>
    </tbody>
</table>
