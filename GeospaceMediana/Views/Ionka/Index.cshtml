@using GeospaceEntity.Models.Codes;
@{
    ViewBag.Title = @ViewBag.Title;
}

<p>
<div class="row">
    <div class="col-md-2">
        
        @Html.ActionLink("Пред.",
                "Index",
                "Ionka",
                new {                                                     // routeValues
                    station = Model.StationCode,
                    start = Model.Start.AddDays(-Model.Limit).ToString("yyyyMMdd"),
                    limit = Model.Limit,
                    step = Model.Step
                },
                                  new
                                  {
                                      @class="btn btn-default btn-lg"
                                  }
    )
    </div>
    <div class="col-md-2">
        <div class="btn-group">
            <button type="button" class="btn btn-default btn-lg dropdown-toggle"  data-toggle="dropdown" aria-expanded="false">
                @Model.StationName <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                @foreach (var item in Model.Stations)
                {
                    if (Model.StationCode != item.Code)
                    {
                        <li><a href="~/Ionka/Index/?station=@(item.Code)&start=@(Model.DateToString(Model.Start))&limit=@(Model.Limit)&step=@(Model.Step)">@item.Name</a></li>                        
                    }
                }
                
            </ul>
        </div>
    </div>
    <div class="col-md-2">.col-md-1</div>
    <div class="col-md-2">.col-md-1</div>
    <div class="col-md-2">.col-md-1</div>
    <div class="col-md-2">
        @Html.ActionLink("След.",
                "Index",
                "Ionka",
                new
                {                                                     // routeValues
                    station = Model.StationCode,
                    start = Model.End.ToString("yyyyMMdd"),
                    limit = Model.Limit,
                    step = Model.Step
                },
                                  new
                                  {
                                      @class = "btn btn-default btn-lg"
                                  }
    )
    </div>
</div>
    </p>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th rowspan="2">
                        Час
                    </th>
                    @foreach (var item in Model.GetHeader())
                    {
                        <th colspan="7">
                            @item.Name
                        </th>
                    }
                </tr>

                <tr>

                    @foreach (var item in Model.GetHeader())
                    {
                        foreach (var subitem in Model.GetHeaderValue())
                        {
                            <th>
                                @subitem
                            </th>
                        }
                    }

                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model.GetHour())
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        @foreach( var subitem in Model.GetHeader())
                        {
                            CodeIonka theCode = Model.GetValue(subitem.YYYY, subitem.MM, subitem.DD, item.HH);
                            
                            <td>
                                @theCode.f0F2
                            </td>
                            <td>
                                @theCode.M3000F2
                            </td>
                            <td>@theCode.f0F1</td>
                            <td>@theCode.M3000F1</td>
                            <td>@theCode.f0Es</td>
                            <td></td>
                            <td>@theCode.fmin</td>
                            
                        }
                        
                    </tr>

                }
                <tr>
                    <td rowspan="3"></td>
                    @foreach (var item in Model.GetHeader())
                    {
                        <td colspan="7">
                            Ak
                        </td>
                    }
                </tr>

                <tr>
                    @foreach (var item in Model.GetHeader())
                    {
                        <td colspan="7">
                            K-индексы
                        </td>
                    }
                </tr>

                <tr>
                    @foreach (var item in Model.GetHeader())
                    {
                        <td colspan="7">
                            <table class="table-bordered" width="100%">

                                <tr>
                                    <td width="12%">1</td>
                                    <td width="12%">2</td>
                                    <td width="12%">3</td>
                                    <td width="12%">4</td>
                                    <td width="12%"></td>
                                    <td width="12%"></td>
                                    <td width="12%"></td>
                                    <td width="12%"></td>

                                </tr>

                            </table>
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    </div>

</div>
