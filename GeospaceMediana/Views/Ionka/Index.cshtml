@using GeospaceEntity.Models.Codes;
@{
    ViewBag.Title = @ViewBag.Title;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th rowspan="2">
                        Час
                    </th>
                    @foreach (var item in Model.GetHeader())
                    {
                        <th class="right-thick-line left-thick-line" colspan="7">
                            @item.Name
                        </th>
                    }
                </tr>

                <tr>

                    @foreach (var item in Model.GetHeader())
                    {
                        var listSubItem = Model.GetHeaderValue();
                        var lastSubItem = listSubItem[listSubItem.Count-1];
                        var firstSubItem = listSubItem[0];                    

                        foreach (var _subitem in listSubItem)
                        {
                            var subitem = _subitem.Replace(" ", "<br>");
                            
                            if(_subitem == firstSubItem)
                            {
                                <th class="left-thick-line sub-header">
                                    @Html.Raw(subitem)
                                </th>
                            }
                            else if (_subitem == lastSubItem)
                            {
                                <th class="right-thick-line sub-header">
                                    @Html.Raw(subitem)
                                </th>
                            }
                            else
                            {
                                <th class="sub-header">
                                    @Html.Raw(subitem)
                                </th>
                            }
                        }
                    }

                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model.GetHour())
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        @foreach (var subitem in Model.GetHeader())
                        {
                            CodeIonka theCode = Model.GetValue(subitem.YYYY, subitem.MM, subitem.DD, item.HH);

                            bool isLowDensityIonization = theCode._f0F2 == "G" && theCode._M3000F2 == "G";
                            
                            <td class="left-thick-line" data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">
                                @theCode._f0F2
                            </td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">
                                @theCode._M3000F2
                            </td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">
                                @if(isLowDensityIonization)
                                {
                                    @theCode._f0F1
                                }
                            </td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">
                                @if(isLowDensityIonization)
                                {
                                    @theCode._M3000F1
                                }
                            </td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">@theCode._f0Es</td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)"></td>
                            <td class="right-thick-line" data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">@theCode._fmin</td>

}
                        
                    </tr>

                }
                <tr>
                    <td rowspan="3"></td>
                    @foreach (var item in Model.GetHeader())
                    {

                        CodeUmagf theCode = Model.GetValueUmagf(item.YYYY, item.MM, item.DD);

                        <td class="right-thick-line left-thick-line" colspan="7">
                            Ak=@theCode._ak
                        </td>
                    }
                </tr>

                <tr>
                    @foreach (var item in Model.GetHeader())
                    {
                        <td class="right-thick-line left-thick-line" colspan="7">
                            K-индексы
                        </td>
                    }
                </tr>

                <tr>
                    @foreach (var item in Model.GetHeader())
                    {

                        CodeUmagf theCode = Model.GetValueUmagf(item.YYYY, item.MM, item.DD);

                        <td class="right-thick-line left-thick-line" colspan="7">
                            <table class="table-bordered" width="100%">

                                <tr>
                                    <td width="12%">@theCode._k1</td>
                                    <td width="12%">@theCode._k2</td>
                                    <td width="12%">@theCode._k3</td>
                                    <td width="12%">@theCode._k4</td>
                                    <td width="12%">@theCode._k5</td>
                                    <td width="12%">@theCode._k6</td>
                                    <td width="12%">@theCode._k7</td>
                                    <td width="12%">@theCode._k8</td>
                                </tr>

                            </table>
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    </div>

</div>
