@using GeospaceEntity.Models.Codes;
@{
    ViewBag.Title = @ViewBag.Title;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th rowspan="2">
                        Час
                    </th>
                    @foreach (var item in Model.GetHeader())
                    {
                        <th colspan="7">
                            @item.Name
                        </th>
                    }
                </tr>

                <tr>

                    @foreach (var item in Model.GetHeader())
                    {
                        foreach (var subitem in Model.GetHeaderValue())
                        {
                            <th>
                                @subitem
                            </th>
                        }
                    }

                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model.GetHour())
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        @foreach (var subitem in Model.GetHeader())
{
    CodeIonka theCode = Model.GetValue(subitem.YYYY, subitem.MM, subitem.DD, item.HH);

                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">
                                @theCode._f0F2
                            </td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">
                                @theCode._M3000F2
                            </td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">@theCode._f0F1</td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">@theCode._M3000F1</td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">@theCode._f0Es</td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)"></td>
                            <td data-toggle="tooltip" data-placement="left" title="@(theCode.Raw)">@theCode._fmin</td>
                            
                        }
                        
                    </tr>

                }
                <tr>
                    <td rowspan="3"></td>
                    @foreach (var item in Model.GetHeader())
                    {
                        <td colspan="7">
                            Ak
                        </td>
                    }
                </tr>

                <tr>
                    @foreach (var item in Model.GetHeader())
                    {
                        <td colspan="7">
                            K-индексы
                        </td>
                    }
                </tr>

                <tr>
                    @foreach (var item in Model.GetHeader())
                    {
                        <td colspan="7">
                            <table class="table-bordered" width="100%">

                                <tr>
                                    <td width="12%">1</td>
                                    <td width="12%">2</td>
                                    <td width="12%">3</td>
                                    <td width="12%">4</td>
                                    <td width="12%"></td>
                                    <td width="12%"></td>
                                    <td width="12%"></td>
                                    <td width="12%"></td>

                                </tr>

                            </table>
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    </div>

</div>
