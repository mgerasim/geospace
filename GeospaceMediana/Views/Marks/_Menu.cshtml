
<li class="dropdown">
    <a id="login_head" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@ViewBag.Station.Name <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">

        @foreach (var item in ViewBag.Stations)
        {
            if (ViewBag.Station.Code != item.Code)
            {
                string name = item.Name == null ? " " : item.Name;
                
                <li>
                    @Html.ActionLink(name,
                                "Index",
                                 "Average",
                                new
                                {
                                    stationCode = item.Code,
                                    type = ViewBag.Type,
                                    year = ViewBag.Date.Year,
                                    month = ViewBag.Date.Month,
                                    day = ViewBag.Date.Day,
                                }, null)
                </li>
            }
        }

    </ul>
</li>
<li>
    @Html.ActionLink("Пред.",
            "Index",
            "Average",
            new
            {
                stationCode = ViewBag.Station.Code,
                type = ViewBag.Type,
                year = ViewBag.PrevDate.Year,
                month = ViewBag.PrevDate.Month,
                day = ViewBag.PrevDate.Day,
            },
                                new
                                {
                                    @class = "btn btn-default btn-lg"
                                }
)
</li>
<li>
    @Html.ActionLink("След.",
            "Index",
            "Average",
            new
            {                                                     // routeValues
                stationCode = ViewBag.Station.Code,
                type = ViewBag.Type,
                year = ViewBag.NextDate.Year,
                month = ViewBag.NextDate.Month,
                day = ViewBag.NextDate.Day,
            },
                                new
                                {
                                    @class = "btn btn-default btn-lg"
                                }
)
</li>
