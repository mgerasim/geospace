<li class="dropdown">
    <a id="login_head" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@ViewBag.Station.Name <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">

        @foreach (var item in ViewBag.Stations)
        {
            if (ViewBag.Station.Code != item.Code)
            {
                string name = item.Name == null ? " " : item.Name;
                
                <li>
                    @Html.ActionLink(name,
                                "Index",
                                  "UmagfIndex",
                                new
                                {
                                    stationCode = item.Code,
                                    YYYY = ViewBag.Date.Year,
                                    MM = ViewBag.Date.Month,
                                    DD = ViewBag.Date.Day
                                }, null)
                </li>
            }
        }

    </ul>
</li>
<li>
    @Html.ActionLink("Пред.",
            "Index",
                            "UmagfIndex",
            new
            {
                stationCode = ViewBag.Station.Code,
                YYYY = ViewBag.PrevDate.Year,
                MM = ViewBag.PrevDate.Month,
                DD = ViewBag.PrevDate.Day
            },
                                new
                                {
                                    @class = "btn btn-default btn-lg"
                                }
)
</li>
<li>
    @Html.ActionLink("След.",
            "Index",
                    "UmagfIndex",
            new
            {                                                     // routeValues
                stationCode = ViewBag.Station.Code,
                YYYY = ViewBag.NextDate.Year,
                MM = ViewBag.NextDate.Month,
                DD = ViewBag.NextDate.Day
            },
                                new
                                {
                                    @class = "btn btn-default btn-lg"
                                }
)
</li>