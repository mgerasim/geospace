@{
    ViewBag.Title = "Редактировать месячный прогноз ионосферной магнитной возмущенности";
}

<h2>Редактировать месячный прогноз ионосферной магнитной возмущенности</h2>

@using (Html.BeginForm("EditForecastMonthIonosphera", "Products", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label for="forecastmonthionosphera" class="col-sm-2 control-label">Введите прогноз:</label>
        <div class="col-sm-10">
            <textarea class="form-control" name="forecastmonthionosphera" id="forecastmonthionosphera" rows=15 placeholder="">@Model.forecast_month_ionosphera</textarea>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Сохранить</button>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div>
                @Html.ActionLink("Назад", "Index")
            </div>
        </div>
    </div>
}
