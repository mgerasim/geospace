@{
    ViewBag.Title = "Редактировать обзор гелиогеофизической обстановки";
}

<h2>Редактировать обзор гелиогеофизической обстановки</h2>

@using (Html.BeginForm("EditReviewGeoEnv", "Products", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label for="reviewgeoenv" class="col-sm-2 control-label">Введите обзор:</label>
        <div class="col-sm-10">
            <textarea class="form-control" name="reviewgeoenv" id="reviewgeoenv" rows=15 placeholder="">@Model.review_geoenv</textarea>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Сохранить</button>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div>
                @Html.ActionLink("Назад", "Index")
            </div>
        </div>
    </div>
}
