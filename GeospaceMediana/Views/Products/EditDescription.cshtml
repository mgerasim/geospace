@{
    ViewBag.Title = "Редактировать примечание к графикам и таблицам";
}

<h2>Редактировать примечание к графикам и таблицам</h2>

@Scripts.Render("~/bundles/ckeditor")

@using (Html.BeginForm("EditDescription", "Products", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label for="description" class="col-sm-2 control-label">Введите примечание к графикам и таблицам:</label>
        <div class="col-sm-10">
            <textarea class="form-control" name="description" id="description" rows=35 placeholder="">@Model.description</textarea>

            <script>
                // Replace the <textarea id="editor1"> with a CKEditor
                // instance, using default configuration.
                CKEDITOR.replace("description",
                {
	                enterMode: CKEDITOR.ENTER_BR
                });
            </script>

        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Сохранить</button>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div>
                @Html.ActionLink("Назад", "Index")
            </div>
        </div>
    </div>
}
