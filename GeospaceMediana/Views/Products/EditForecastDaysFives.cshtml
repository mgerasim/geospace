@{
    ViewBag.Title = "Редактировать пятидневный прогноз медианы";
}

<h2>Редактировать пятидневный прогноз медианы</h2>

@using (Html.BeginForm("EditForecastDaysFives", "Products", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label for="forecastdaysfives" class="col-sm-2 control-label">Введите прогноз:</label>
        <div class="col-sm-10">
            <textarea class="form-control" name="forecastdaysfives" id="forecastdaysfives" rows=15 placeholder="">@Model.forecast_days_fives</textarea>
        </div>
    </div>
    
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Сохранить</button>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div>
                @Html.ActionLink("Назад", "Index")
            </div>
        </div>
    </div>
}
