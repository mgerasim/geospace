
<li class="dropdown">
    <a id="login_head" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@ViewBag.Station.Name <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">

        @foreach (var item in ViewBag.Stations)
        {
            if (ViewBag.Station.Code != item.Code)
            {
                string name = item.Name == null ? " " : item.Name;
                
                <li>
                    @Html.ActionLink(name,
                                "Index",
                                 "CharacterizationDay",
                                new
                                {
                                    stationCode = item.Code,
                                    year = ViewBag.Year,
                                    month = ViewBag.Month,
                                    startDay = ViewBag.DayStart
                                }, null)
                </li>
            }
        }

    </ul>
</li>

<li>
    @Html.ActionLink("Пред.",
            "Index",
            "CharacterizationDay",
            new
            {
                stationCode = ViewBag.StationCode,
                year = ViewBag.PrevStartDate.Year,
                month = ViewBag.PrevStartDate.Month,
                startDay = ViewBag.PrevStartDate.Day
            },
                                new
                                {
                                    @class = "btn btn-default btn-lg"
                                }
)
</li>
<li>
    @Html.ActionLink("След.",
            "Index",
            "CharacterizationDay",
            new
            {                                                     // routeValues
                stationCode = ViewBag.StationCode,
                year = ViewBag.NextStartDate.Year,
                month = ViewBag.NextStartDate.Month,
                startDay = ViewBag.NextStartDate.Day
            },
                                new
                                {
                                    @class = "btn btn-default btn-lg"
                                }
)
</li>
