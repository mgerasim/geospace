@using GeospaceMediana.Models;
@{
    ViewBag.Title = @ViewBag.Title;
}

<h3>@ViewBag.Station.Name - @ViewBag.Station.Code.ToString() за @ViewBag.Date.ToShortDateString()</h3>

<div id="container_05" style="width:100%; height:500px;"></div>
<div id="container_07" style="width:100%; height:500px;"></div>
<div id="container_10" style="width:100%; height:500px;"></div>
<div id="container_20" style="width:100%; height:500px;"></div>
<div id="container_27" style="width:100%; height:500px;"></div>
<div id="container_30" style="width:100%; height:500px;"></div>

@section Scripts
{
    @Scripts.Render("~/Scripts/highcharts.js")
    @Scripts.Render("~/Scripts/draggable-points.js")     

    @DrawAverage("container_05", "Скользящие средние " + @ViewBag.Type + " для слоя F2 за 5 дней", @ViewBag.value_05, @ViewBag.value_05_skip, @ViewBag.value, "5", @ViewBag.mediana);
    @DrawAverage("container_07", "Скользящие средние " + @ViewBag.Type + " для слоя F2 за 7 дней", @ViewBag.value_07, @ViewBag.value_07_skip, @ViewBag.value, "7", @ViewBag.mediana);
    @DrawAverage("container_10", "Скользящие средние " + @ViewBag.Type + " для слоя F2 за 10 дней", @ViewBag.value_10, @ViewBag.value_10_skip, @ViewBag.value, "10", @ViewBag.mediana);
    @DrawAverage("container_20", "Скользящие средние " + @ViewBag.Type + " для слоя F2 за 20 дней", @ViewBag.value_20, @ViewBag.value_20_skip, @ViewBag.value, "20", @ViewBag.mediana);
    @DrawAverage("container_27", "Скользящие средние " + @ViewBag.Type + " для слоя F2 за 27 дней", @ViewBag.value_27, @ViewBag.value_27_skip, @ViewBag.value, "27", @ViewBag.mediana);
    @DrawAverage("container_30", "Скользящие средние " + @ViewBag.Type + " для слоя F2 за 30 дней", @ViewBag.value_30, @ViewBag.value_30_skip, @ViewBag.value, "30", @ViewBag.mediana);
 }

@helper DrawAverage( string nameDiv, string title, string valueAverage, string valueSkip, string value, string quantity, string mediana)
{
    <script>

    $(function () {
        $('#@(nameDiv)').highcharts({
            title: {
                text: '@title'
            },
            xAxis :{
                title: {
                    text: 'Часы'
                },
                categories: [
                @for(int i=0;i<24;i++)
                {
                    @Html.Raw("'"+i.ToString("00")+"'")

                    if(i!=23)
                    {
                        @:,
                    }
                }
            ],
            lineWidth: 2,
            gridLineWidth: 1,
            tickInterval:1,
            tickmarkPlacement: 'on',
        },
        yAxis: [{ // Primary yAxis
            labels: {
                format: '{value}',
                style: {
                    color: Highcharts.getOptions().colors[1]
                }
            },
            title: {
                text: 'Критическая частота МГц ⋅ 10',
                style: {
                    color: Highcharts.getOptions().colors[1]
                }
            },
            min: 0,
            max: 100,
            tickInterval: 10,
        }, { // Secondary yAxis
            title: {
                text: 'Количество пропущенных значений',
                style: {
                    color: Highcharts.getOptions().colors[0]
                }
            },
            labels: {
                format: '{value}',
                style: {
                    color: Highcharts.getOptions().colors[0]
                }
            },
            opposite: true,
            min: 0,
            max: '@quantity',
            tickInterval: 1,
        }],
        tooltip: {
            shared: true
        },

        series: [{
            name: 'Пропущенные значения',
            type: 'column',
            yAxis: 1,
            data: @valueSkip

                }, {
                    name: 'Средняя частота @ViewBag.Type',
                    type: 'spline',
                    data: @valueAverage
                    }
            , {
                name: 'Фактическая частота @ViewBag.Type',
                type: 'spline',
                data: @value
                }
            , {
                name: 'Медиана @ViewBag.Type',
                type: 'spline',
                data: @mediana
            }]
        });
    });


</script>
}
